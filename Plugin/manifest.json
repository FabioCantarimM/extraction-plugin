{
  "manifest_version": 3,
  "name": "DrogaRaia Plugin",
  "version": "1.0",
  "description": "Plugin para adição de informações de produtos e vendas para o site Drogaraia",
  "icons": {
    "48": "./image/logo.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.drogaraia.com.br/*"],
  "background": {
    "service_worker": "background.js",
    "scritps": [
      "components/search.js",
      "components/product.js",
      "components/category.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.drogaraia.com.br/*"],
      "js": [
        "functions/globals.js",
        "components/search.js",
        "components/product.js",
        "components/category.js",
        "functions/bootstrap.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "./image/logo.png",
      "24": "./image/logo.png",
      "32": "./image/logo.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
  }
}
