{
    "manifest_version": 3,
    "name": "Hello Raia Plugin",
    "version": "1.0",
    "description": "Escreve 'Hello World' no site da Drogaria Raia",
    "icons": {
      "48": "./image/icon.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://www.drogaraia.com.br/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.drogaraia.com.br/*"],
        "js": [ 
          "tools/index.js",
          "components/product.js", 
          "components/search.js",
          "content.js"
        ]
      }
    ],
    "action": {
      "default_icon": "./image/icon.png"
    }
  }
  