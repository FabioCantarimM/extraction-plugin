{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Chrome Extension",
            "url": "https://www.drogaraia.com.br/", // Deixe como está se não houver uma URL inicial
            "webRoot": "${workspaceFolder}/Plugin",
            "runtimeArgs": [
                "--load-extension=${workspaceFolder}/Plugin", // Caminho para a extensão
                "--remote-debugging-port=9222"        // Porta de depuração
            ]
        }
    ]
}
